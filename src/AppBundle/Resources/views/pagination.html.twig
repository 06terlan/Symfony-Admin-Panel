{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <div class="btn-group">
        {% if first is defined and current != first %}
                <a class="btn btn-info" href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
        {% endif %}

        {% if previous is defined %}
            <a class="btn btn-info" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <a class="btn btn-info" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
            {% else %}
                <a class="btn btn-info active">{{ page }}</a>
            {% endif %}

        {% endfor %}

        {% if next is defined %}
            <a class="btn btn-info" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
        {% endif %}

        {% if last is defined and current != last %}
            <a class="btn btn-info" href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a>
        {% endif %}
    </div>
{% endif %}